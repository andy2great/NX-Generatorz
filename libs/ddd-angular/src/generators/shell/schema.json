{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "DddShell",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the shell",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "domain": {
      "type": "string",
      "description": "The domain to add the shell",
      "x-prompt": "What domain would you like to use?",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": [
    "name",
    "domain"
  ]
}